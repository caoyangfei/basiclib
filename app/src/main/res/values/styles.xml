<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>

        <item name="styleLoadingLayout">@style/CustomLoadingLayoutStyle</item>
        <item name="styleTitleBarLayout">@style/titlebar</item>
    </style>

    <style name="CustomLoadingLayoutStyle" parent="LoadingLayoutStyle">
        <item name="llEmptyImage">@drawable/loading_empty_view</item>
        <item name="llErrorImage">@drawable/loading_error_view</item>
        <item name="llLoadingResId">@layout/common_loading</item>
    </style>

    <style name="titlebar" >
        <item name="titleColor">@color/color_00FA9A</item>
    </style>
</resources>
